        $("#modalsettings").fadeOut();
      })*/
      
  $("#closesettings").click(function(){
    
   $("#modalsettings").fadeOut();
  
  });
      
  
      
      
       $("#addaguildbutton").click(function(){
         $("#modalguild").fadeIn();
       });
      
      $("#addaguildclose").click(function(){
         $("#modalguild").fadeOut();
       });
      
       $("#createaguild").click(function(){
         $("#modalguild").fadeOut();
          $("#modalcreateguild").fadeIn();
       });
      
       $("#joinaguild").click(function(){
         $("#modalguild").fadeOut();
          $("#modaljoinguild").fadeIn();
       });
      
      
        $("#joinaguildclose").click(function(){
            $("#modaljoinguild").fadeOut();
            $("#modalguild").fadeIn();
        });
      
       $("#createaguildclose").click(function(){
            $("#modalcreateguild").fadeOut();
           $("#modalguild").fadeIn();
        });
      
      
    
    });
    </script>