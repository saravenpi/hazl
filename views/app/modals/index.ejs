    <header class="modal-card-head">
      <p class="modal-card-title">Create a guild</p>
      <p id="createaguildclose" class="delete" aria-label="close"></p>
    </header>
    <section class="modal-card-body">
     <div class="field">
  <label class="label">Guild Name</label>
  <div class="control">
    <input class="input" name="guild[name]" type="text" placeholder="Enter a guild name" value="<%= user.username %>'s guild" required>
  </div> 
</div>
    </section>
    <footer class="modal-card-foot">
     <button type="submit" id="createevent" class="button is-success">Create</button>
      <input style="display:none" type="hidden" name="user[token]" value="<%= user.token %>">
      <p id="createaguildclose" class="button cancel">Cancel</p>
    </footer>
  </div>
      </form>
</div>
    
    
    
